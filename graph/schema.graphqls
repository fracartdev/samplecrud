type Book {
  id: ID!
  title: String!
  author: String!
}

type Query {
  books: [Book]
}

input BookInput {
  title: String!
  author: String!
}

type Mutation {
  addBook(input: BookInput!): Book
  updateBook(id: String!, updatedBook: BookInput!): Book
  deleteBook(id: String!, deletedBook: BookInput!): Book
  readBook(id: String!): Book
}
